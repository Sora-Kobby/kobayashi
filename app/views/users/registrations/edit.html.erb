<h2 class="account-edit-title">アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "account-edit-form" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <!-- 名前フィールド -->
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
  </div>

  <!-- プロフィールフィールド -->
  <div class="form-group">
    <%= f.label :profile, "プロフィール" %>
    <%= f.text_area :profile, class: "form-control", rows: 5, autofocus: true %>
  </div>

  <!-- メールフィールド -->
  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-warning">
      現在確認中のメールアドレス: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <!-- パスワードフィールド -->
  <div class="form-group">
    <%= f.label :password, "新しいパスワード (変更しない場合は空白のまま)" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">
        最低<%= @minimum_password_length %>文字
      </small>
    <% end %>
  </div>

  <!-- パスワード確認フィールド -->
  <div class="form-group">
    <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <!-- 現在のパスワードフィールド -->
  <div class="form-group">
    <%= f.label :current_password, "現在のパスワード（変更確認用）" %>
    <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <div class="form-group actions">
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>



<div class="cancel-account">
  <br>サイトに満足していないですか？<br>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか？", turbo_confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %>
</div>

<%= link_to "戻る", :back, class: "btn btn-secondary" %>
