<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field remember-me">
      <%= f.label :"ログインしたままにする", class: 'remember-label'%>
      <%= f.check_box :remember_me, class: 'remember-checkbox' %>
      </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<!-- ログインフォームの直後にリンクを表示 -->
<div class="login-links">
  <%= link_to "サインアップ", new_registration_path(resource_name) %><br />
  <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name) %>
</div>
<%= render "users/shared/links" %>
